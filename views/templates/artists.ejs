<% include head %>
  <h1>Artists</h1>
  <h3><a href="/artists/new">Add an artist</a></h3>
  <form class="artistSearch" action="/artists/search" method="GET">
    <h3>Search an Artist by name:</h3>
    <input type='text' name="search">
    <input type="submit" value="Search">
  </form>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Name</h2>
    </div>
    <div class='col-md-3'>
      <h2>Genre</h2>
    </div>
    <div class='col-md-3'>
      <h2>Origin</h2>
    </div>
  </div>
  <% artists.forEach(function (artist) { %>
    <div class='row'>
      <div class='col-md-3'>
        <a href="/artists/<%= artist._id %>">
          <h4>
            <%= artist.name %>
          </h4>
        </a>
      </div>
      <div class='col-md-3'>
        <a href="/artists/<%= artist._id %>">
          <h4>
            <%= artist.genre %>
          </h4>
        </a>
      </div>
      <div class='col-md-3'>
        <a href="/artists/<%= artist._id %>">
          <h4>
            <%= artist.origin %>
          </h4>
        </a>
      </div>
    </div>
  <% }); %>
<% include foot %>
